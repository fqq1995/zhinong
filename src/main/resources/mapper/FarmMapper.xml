<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.blogss.mapper.FarmMapper">
    <sql id="columns">farmId,farmImg,farmName</sql>

    <!--后台农场添加-->
    <insert id="farmAdd" parameterType="Farm">
        insert into farm(farmName,farmImg) values
        (#{farmName},#{farmImg})
    </insert>
    
    <!--总记录数-->
    <select id="totRecord" resultType="int" parameterType="String">
        SELECT count(*) from  farm where 1=1
        <if test="farmName != null and farmName != ''">
            and farmName like concat('%',#{farmName},'%')
        </if>

    </select>

    <!--后台农场查看,分页-->
    <select id="farmSelectAll" resultType="Farm">
        select <include refid="columns"></include>
        from farm
        where 1=1
        <if test="farmName != null and farmName != ''">
           and farmName like concat('%',#{farmName},'%')
        </if>
        limit #{pageIndex},#{pageSize}
    </select>


    <!--后台农场删除-->
    <delete id="farmDelete">
        delete from farm
        where farmId in
        <foreach collection="array" item="item" index="index" separator="," open="(" close=")">
          #{item}
        </foreach>
    </delete>

    <!--删除一条-->
    <delete id="farmDelOne" parameterType="String">
        DELETE FROM farm WHERE farmId = #{id}
    </delete>

    <!--后台农场修改-->
    <update id="farmModify">
        update farm
        <set>
            <if test="farmName != null">
                farmName = #{farmName,jdbcType=VARCHAR},
            </if>
            <if test="farmImg != null">
                farmImg = #{farmImg,jdbcType=INTEGER},
            </if>
        </set>
        WHERE  farmId = #{farmId}
    </update>
</mapper>