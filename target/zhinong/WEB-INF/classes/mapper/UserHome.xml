<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.blogss.mapper.UserHomeMapper">
    <sql id="columns">userId,userPhoto,loginName,loginPwd,userName,userMail,payPwd,</sql>

    <!--用户注册-->
    <insert id="userRegister" parameterType="User">
        insert into user(loginName,loginPwd,createTime) values
        (#{loginName},#{loginPwd},#{createTime})
    </insert>

    <!--用户登录-->
    <select id="userLogin" resultType="Integer">
        SELECT count(*) from user
        where loginName = #{0} and loginPwd = #{1}
    </select>

    <!--根据用户名查询用户的信息-->
    <select id="getUserByName" parameterType="String" resultType="User">
        select * from user where loginName = #{loginName}
    </select>

    <!--进入用户中心显示用户的养殖项目-->
    <select id="userPage" parameterType="Integer" resultType="RaiseOrders">
        select * from raise_orders where userId = #{userId}
    </select>

    <!--用户订单界面-->
    <select id="userOrders" parameterType="Integer" resultType="RaiseOrders">
        select * from raise_orders where userId = #{userId}
    </select>

</mapper>